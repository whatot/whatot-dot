root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4

[[lua]]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[[shell]]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.yml]
indent_size = 2
